<div class="container" style="margin: 250px auto">
    <div class="row">
        <div class="col-6 offset-3" style="line-height: 60px;">
            <h4 style="font-family: 'Libre Baskerville', serif;">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group" >
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group" >
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo" ></textarea>
                </div>
                <div class="form-group" >
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-light" style=" background: rgb(227, 223, 223); margin:20px">Guardar</button>
            </form>
             {{#if error}}
             <p class="alert alert-danger">{{message}}</p>
             {{/if}}
        </div>
    </div>
</div>

