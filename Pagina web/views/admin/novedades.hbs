<div class="container" style="margin: 100px auto; background-color: white; border-radius: 20px; width: 200vh;
	height: 100vh;
	margin: 100px auto;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span> Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesion<i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h3>Lista de Novedades</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fa fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-right">
            <form class="form-inline" action="/admin/novedades" method="get" style="width: fit-content;">
            <input class="form-control" type="search" name="q" placeholder="Buscar" aria-label="search" {{#if q}} 
            value="{{q}}" {{/if}}>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search" ></i></button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                                <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            No se encontraron resultados para "<strong>{{q}}</strong>"
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div>

